<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="LandolsiWebdesign\LwSmartBanners\Core\Content\Banner\BannerDefinition">
            <tag name="shopware.entity.definition" entity="lw_smart_banner"/>
        </service>

        <service id="LandolsiWebdesign\LwSmartBanners\Service\BannerMatchingService">
            <argument type="service" id="lw_smart_banner.repository"/>
        </service>

        <service id="LandolsiWebdesign\LwSmartBanners\Storefront\Subscriber\BannerPageSubscriber">
            <argument type="service" id="LandolsiWebdesign\LwSmartBanners\Service\BannerMatchingService"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Admin Controller -->
        <service id="LandolsiWebdesign\LwSmartBanners\Controller\Administration\BannerAdminController" public="true">
            <argument type="service" id="lw_smart_banner.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="controller.service_arguments"/>
        </service>
    </services>
</container>
